{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@/*": ["app/*"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noImplicitOverride": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
