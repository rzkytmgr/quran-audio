{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/helper/*": ["helper/*"],
      "@/config/*": ["config/*"],
      "@/mapping/*": ["mapping/*"],
      "@/recitators": ["recitator/index"],
      "@/interfaces": ["interfaces/index"]
    },
    "sourceMap": true,
    "target": "es6",
    "outDir": "./dist",
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "allowUnreachableCode": false
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./**/*", "./mapping/*.json"],
  "exclude": ["node_modules", "dist"]
}